    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize12Percent" parent="">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="tabProfileTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_body_1</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CounterTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_body_2</item>
    </style>

    <style name="textInputEditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/color_text_32</item>
        <item name="boxStrokeColor">@color/color_primary3</item>
        <item name="android:textCursorDrawable">@color/color_primary3</item>
    </style>

    <style name="CustomVeganTypeChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:backgroundTint">@color/chip_state_color_background</item>
        <item name="chipStrokeColor">@color/color_primary3</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_state_color_text</item>
        <item name="rippleColor">@color/color_primary2</item>
    </style>


    <style name="MainBottomNavigationView">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/selector_bnv_color</item>
        <item name="itemTextColor">@drawable/selector_bnv_color</item>
        <item name="itemPaddingBottom">10dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemRippleColor">@android:color/transparent</item>

    </style>
    <style name="MainBottomNavigationView.TextActive" >
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>
    <style name="MainBottomNavigationView.ActiveIndicator" parent="">
        <item name="android:color">@android:color/transparent</item>
    </style>
    <!--    OnBoarding-->
    <style name="Widget.BeginVegan.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextColor">@color/color_primary</item>
        <item name="boxStrokeColor">@color/color_primary</item>
    </style>

    <style name="Widget.BeginVegan.TextInputEditText.OutlinedBox" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="Widget.BeginVegan.Dropdown.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/color_primary</item>
        <item name="dropDownBackgroundTint">@color/color_white</item>
    </style>
    <style name="RoundedDropDown">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- toggle switch -->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="colorSwitchThumbNormal">@color/color_background</item>
    </style>

    <!--    Home -->
    <style name="MainHomeTextStyle" parent="body_1_bold">
        <item name="android:textColor">@color/color_white</item>
    </style>
</resources>