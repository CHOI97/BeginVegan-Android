<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.home.VeganTestFragment">
        <include
            android:id="@+id/included_toolbar"
            layout="@layout/include_toolbar_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@{@string/vegan_test_title}"/>
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/body_2_bold"
            android:textColor="@color/color_text_01"
            android:text="@string/vegan_test_description"
            app:layout_constraintTop_toBottomOf="@id/included_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_72"/>
        <RadioGroup
            android:id="@+id/rg_vegan_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_56"
            android:orientation="vertical"
            android:theme="@style/SwitchTheme">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:background="@drawable/selector_radio_button"
                    android:buttonTint="@color/color_transparent"
                    android:layout_marginEnd="@dimen/margin_12"/>
                <include
                    android:id="@+id/included_vegan"
                    layout="@layout/include_illus_vegan_level"
                    app:description="@string/vegan_test_description_vegan"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:buttonTint="@color/color_transparent"
                    android:layout_marginEnd="@dimen/margin_12"/>
                <include
                    android:id="@+id/included_vegan"
                    layout="@layout/include_illus_vegan_level"
                    app:mlik="true"
                    app:description="@string/vegan_test_description_lacto"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:buttonTint="@color/color_transparent"
                    android:layout_marginEnd="@dimen/margin_12"/>
                <include
                    android:id="@+id/included_vegan"
                    layout="@layout/include_illus_vegan_level"
                    app:egg="true"
                    app:description="@string/vegan_test_description_ovo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:buttonTint="@color/color_transparent"
                    android:layout_marginEnd="@dimen/margin_12"/>
                <include
                    android:id="@+id/included_vegan"
                    layout="@layout/include_illus_vegan_level"
                    app:milk="true"
                    app:egg="true"
                    app:description="@string/vegan_test_description_lacto_ovo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:buttonTint="@color/color_transparent"
                    android:layout_marginEnd="@dimen/margin_12"/>
                <include
                    android:id="@+id/included_vegan"
                    layout="@layout/include_illus_vegan_level"
                    app:milk="true"
                    app:egg="true"
                    app:fish="true"
                    app:description="@string/vegan_test_description_pesco"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:buttonTint="@color/color_transparent"
                    android:layout_marginEnd="@dimen/margin_12"/>
                <include
                    android:id="@+id/included_vegan"
                    layout="@layout/include_illus_vegan_level"
                    app:milk="true"
                    app:egg="true"
                    app:fish="true"
                    app:chicken="true"
                    app:description="@string/vegan_test_description_pollo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:buttonTint="@color/color_transparent"
                    android:layout_marginEnd="@dimen/margin_12"/>
                <include
                    android:id="@+id/included_vegan"
                    layout="@layout/include_illus_vegan_level"
                    app:milk="true"
                    app:egg="true"
                    app:fish="true"
                    app:chicken="true"
                    app:meat="true"
                    app:description="@string/vegan_test_description_flexitarian"/>
            </LinearLayout>
        </RadioGroup>
        <TextView
            android:id="@+id/tv_go_result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_64"
            style="@style/heading_bold"
            android:textColor="@color/color_text_04"
            android:text="@string/btn_vegan_test_check_result"
            android:gravity="center"
            android:background="@color/color_primary"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>