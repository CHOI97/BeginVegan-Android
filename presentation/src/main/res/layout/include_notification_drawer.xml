<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Toolbar
            android:id="@+id/tb_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:backgroundTint="@color/color_primary"
                android:layout_marginEnd="@dimen/margin_4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/title_bold"
                android:textColor="@color/color_primary"
                android:text="@string/notification"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_notification_filled"
                android:backgroundTint="@color/color_primary"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_16"/>
        </Toolbar>
        <TextView
            android:id="@+id/tv_new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/heading_bold"
            android:textColor="@color/color_text_01"
            android:text="@string/notification_new"
            app:layout_constraintTop_toBottomOf="@id/tb_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_24"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_new_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_new_title"
            tools:listitem="@layout/item_notification" />
        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_5"
            android:background="@color/color_gray_00"
            app:layout_constraintTop_toBottomOf="@id/rv_new_notification"
            android:layout_marginTop="@dimen/margin_10"/>
        <TextView
            android:id="@+id/tv_old_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/heading_bold"
            android:textColor="@color/color_text_01"
            android:text="@string/notification_old"
            app:layout_constraintTop_toBottomOf="@id/v_divider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_24"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_old_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_old_title"
            tools:listitem="@layout/item_notification" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>