<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dialog_width"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        app:cardCornerRadius="@dimen/radius_8">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/margin_20">
            <TextView
                android:id="@+id/tv_vegan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_notification_badge"
                android:backgroundTint="@color/color_primary"
                style="@style/body_2_regular"
                android:textColor="@color/color_text_04"
                android:text="@string/vegan_type_vegan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingHorizontal="@dimen/margin_12"
                android:paddingVertical="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_20"/>
            <ToggleButton
                android:layout_width="@dimen/item_32"
                android:layout_height="@dimen/item_32"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/selector_ic_heart"
                android:backgroundTint="@color/color_primary"
                android:textColor="@color/color_transparent"
                android:layout_marginEnd="@dimen/margin_20"/>
            <TextView
                android:id="@+id/tv_recipe_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/body_1_bold"
                android:textColor="@color/color_text_01"
                app:layout_constraintTop_toBottomOf="@id/tv_vegan_type"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginHorizontal="@dimen/margin_20"/>
            <View
                android:id="@+id/v_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_8"
                android:background="@color/color_gray_00"
                app:layout_constraintTop_toBottomOf="@id/tv_recipe_title"
                android:layout_marginTop="@dimen/margin_20"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_264"
                app:layout_constraintTop_toBottomOf="@id/v_divider"
                android:layout_marginTop="@dimen/margin_28"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_recipe_ingredients_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/body_2_bold"
                        android:textColor="@color/color_primary_variant_01"/>
                    <TextView
                        android:id="@+id/tv_recipe_ingredients_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/body_2_regular"
                        android:textColor="@color/color_text_01"
                        android:layout_marginTop="@dimen/margin_4"/>
                    <TextView
                        android:id="@+id/tv_recipe_process_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/body_2_bold"
                        android:textColor="@color/color_primary_variant_01"
                        android:layout_marginTop="@dimen/margin_20"/>
                    <TextView
                        android:id="@+id/tv_recipe_process_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/body_2_regular"
                        android:textColor="@color/color_text_01"
                        android:layout_marginTop="@dimen/margin_4"/>
                </LinearLayout>
            </ScrollView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close"
                android:layout_width="@dimen/dialog_width"
                android:layout_height="@dimen/item_48"
                android:layout_marginHorizontal="@dimen/margin_20"
                style="@style/body_1_bold"
                android:text="@string/btn_close"
                android:textColor="@color/color_text_04"
                app:backgroundTint="@color/color_primary"
                app:cornerRadius="@dimen/radius_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>